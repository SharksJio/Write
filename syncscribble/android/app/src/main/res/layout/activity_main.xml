<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Main Toolbar -->
    <LinearLayout
        android:id="@+id/main_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0f0f0"
        android:elevation="4dp">
        
        <!-- Toolbar content will be added dynamically -->
        
    </LinearLayout>

    <!-- Pen Toolbar -->
    <LinearLayout
        android:id="@+id/pen_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e0e0e0"
        android:elevation="2dp"
        android:visibility="gone">
        
        <!-- Pen toolbar content will be added dynamically -->
        
    </LinearLayout>

    <!-- Main Content Area -->
    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Canvas View (Custom drawing surface) -->
        <com.styluslabs.writeqt.NativeCanvasView
            android:id="@+id/canvas_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Optional overlays will be added here -->

    </FrameLayout>

    <!-- Status/Notification Toolbar -->
    <LinearLayout
        android:id="@+id/notify_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0f0f0"
        android:visibility="gone">
        
        <!-- Notification toolbar content will be added dynamically -->
        
    </LinearLayout>

</LinearLayout>